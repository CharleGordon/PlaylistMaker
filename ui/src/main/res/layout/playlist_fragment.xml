<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playlistFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorPrimary" >

    <LinearLayout
        android:id="@+id/placeholderWithoutPlaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_24dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:visibility="visible">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/clearSearchHistoryButton"
            style="@style/refreshButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/new_playlist" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_46dp"
            android:src="@drawable/placeholder_without_results"/>

        <com.google.android.material.textview.MaterialTextView
            style="@style/titleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            android:textSize="19sp"
            android:gravity="center"
            android:text="@string/empty_playlist"/>

    </LinearLayout>

</LinearLayout>