<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="titleStyle" >
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="regularText" >
        <item name="android:textSize">@dimen/text_indent</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="subtitleGrayText" >
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="mediumText">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="tabLayoutMediaText" >
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="tabIndicatorStyle" >
        <item name="android:layout_width">@dimen/margin_148dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="tabIndicatorColor">?attr/colorOnPrimary</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>

    <style name="mainActivityButtons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginHorizontal">@dimen/text_indent</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/titleStyle</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">1dp</item>
        <item name="iconTint">@color/black</item>
        <item name="cornerRadius">@dimen/margin_start</item>
    </style>

    <style name="settingsStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/text_indent</item>
        <item name="android:paddingEnd">@dimen/margin_12dp</item>
        <item name="android:paddingVertical">@dimen/margin_21dp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:drawableTint">#AEAFB4</item>
        <item name="android:textAppearance">@style/regularText</item>
    </style>

    <style name="refreshButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/margin_10dp</item>
        <item name="android:paddingRight">@dimen/margin_14dp</item>
        <item name="android:paddingLeft">@dimen/margin_16dp</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/titleStyle</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="cornerRadius">54dp</item>
    </style>

</resources>